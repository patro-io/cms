{
  "id": "core-analytics",
  "name": "Analytics & Insights",
  "version": "1.0.0-beta.1",
  "description": "Core analytics system for tracking page views, user behavior, and content performance. Provides dashboards and reports with real-time metrics",
  "author": {
  "name": "Patro",
  "email": "team@patro.io",
  "url": "https://patro.io"
},
  "homepage": "https://patro.io/cms/plugins/core-analytics",
  "repository": "https://github.com/patro-io/cms/tree/main/src/plugins/core-plugins",
  "license": "MIT",
  "category": "analytics",
  "tags": ["analytics", "metrics", "tracking", "insights", "dashboard"],
  "dependencies": [],
  "settings": {
    "trackPageViews": {
      "type": "boolean",
      "label": "Track Page Views",
      "description": "Automatically track page views",
      "default": true
    },
    "trackUserSessions": {
      "type": "boolean",
      "label": "Track User Sessions",
      "description": "Track user session duration and behavior",
      "default": true
    },
    "retentionDays": {
      "type": "number",
      "label": "Data Retention (days)",
      "description": "How long to keep analytics data",
      "default": 90
    }
  },
  "hooks": {
    "onActivate": "activate",
    "onDeactivate": "deactivate"
  },
  "routes": [],
  "permissions": {
    "analytics:view": "View analytics data",
    "analytics:export": "Export analytics reports"
  },
  "adminMenu": {
    "label": "Analytics",
    "icon": "chart-bar",
    "path": "/admin/analytics",
    "order": 50
  }
}
